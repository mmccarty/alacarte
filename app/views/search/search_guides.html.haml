- if flash[:notice]
  #list_error= flash[:notice]
#page-list
  = new_button 'Create New Guide'
  #new{:style => "display:none"}
    = form_tag :controller => 'guide', :action => 'create', :id => @guide do
      = error_messages_for 'guide'
      #vertical_inputs.index
        %h4 Create Guide
        %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(GUIDE_TITLE_MSSG, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
        = content_tag :a, 'cancel', :onclick => "$('new').toggle();$('new_button').toggle();; return false;"
        = render  :partial => "/guide/guide_title"
        %span
          %label &nbsp;
          = submit_tag 'Create Guide'
        %br/
  #second_tabs
    %ul#second_tabs
      %li= link_to "My Guides" , :controller => 'guide', :action => 'index', :sort => 'name'
      %li.current
        %span#message= search_results_message
        = form_tag :controller => 'search', :action => 'search_guides' do
          = text_field 'mod', 'search',"size" => 35, |
            :value => @search_term                   |
          = submit_tag 'Search'
  %div{:style => "clear: right;"}
  #product-list
    - unless @search_results.empty?
      #table
        = render  :partial => "guides_list"
    - else
      #notice
        No Guides found with
        = succeed "." do
          %b= @search_term
