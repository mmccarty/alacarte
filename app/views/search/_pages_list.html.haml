%table
  = render :partial => "page/t_head"
  - for page in @search_results
    %tr{:class => cycle('list-line-odd', 'list-line-even'), :id => "row#{page.id}"}
      = render :partial => "page/index_row" ,:locals => {:id => page,:page => @pag, :sort => @sort,:search => @search_term}
.pagination
  - if @search_results.total_pages > 1
    %ul
      %li= will_paginate @search_results, :params => params.merge({:sort=> @sort}).except(:authenticity_token)
      %li= image_tag "spinner.gif", :id => "spinner_links", :class => 'image', :alt => "Spinner", :style => 'display:none;'
