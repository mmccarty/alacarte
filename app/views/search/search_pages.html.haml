- if flash[:notice]
  #list_error
    = flash[:notice]
#page-list
  = new_button 'Create New Course Page'
  #new{:style => "display:none"}
    = form_tag :controller => 'page', :action => 'create' do
      = error_messages_for 'page'
      #vertical_inputs.page_index
        %h4 Create New Page
        %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(PAGE_INDEX_TITLE_MSSG, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
        = content_tag :a, 'cancel', :onclick => "$('new').toggle();$('new_button').toggle();; return false;"
        = render  :partial => "/page/page_title"
        %span
          %label &nbsp;
          = submit_tag 'Create Page'
        %br/
  #second_tabs
    %ul#second_tabs
      %li= link_to "My Pages" , :controller => 'page', :action => 'index', :sort => 'name'
      %li.current
        %span#message= search_results_message
        = form_tag :controller => 'search', :action => 'search_pages' do
          = text_field 'mod', 'search',"size" => 35, |
            :value => @search_term                   |
          = submit_tag 'Search'
  %div{:style => "clear: right;"}
  #product-list
    - unless @search_results.empty?
      #table
        = render  :partial => "pages_list"
    - else
      #notice
        No Pages found with
        = succeed "." do
          %b= @search_term
