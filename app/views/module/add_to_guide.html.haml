%fieldset
  %h3.title
    = render :partial => 'title_actions'
  %h4
    = link_to "Add To/Used On", :controller => 'module', :action =>'manage', :id => @mod.id, :type => @mod.class
    >> Add to Subject Guides
  - if flash[:error]
    #error_wrapper
      #list_error= flash[:error]
  %p Check the box next to the guide's tab you want to add the module to.
  - unless @guides.size <1
    = form_tag :action => 'add_to_guide', :id => @mod.id, :type => @mod.class do
      #product-list
        #table
          %table
            %thead
              %tr
                %th{:class => sort_th_class_helper("name")}
                  = sort_link_helper "Title", "name"
                %th= image_tag "spinner.gif", :id => "spinner_sort", :class => 'image', :alt => "Spinner", :style => 'display:none;'
                %th{:class => sort_th_class_helper("date")}
                  = sort_link_helper "Last Update", "date"
                %th{:class => "#{sort_th_class_helper "publish"} center"}
                  = sort_link_helper "Published?", "publish"
            - for guide in @guides
              %tr{:class => cycle('list-line-odd', 'list-line-even')}
                %td{:class => sort_th_class_helper("name"), :width => "45%"}
                  = truncate(h(guide.guide_name),:length => 65)
                  .check_box
                    - for tab in guide.tabs
                      = check_box_tag(tab.tab_name, tab.id,session[:tabs].include?(tab.id.to_s) , :onclick => remote_function( :url => {:action => 'add_guide', :tid => tab.id}))
                      = tab.tab_name
                      %br/
                %td{:width => "10%"}
                  = link_to image_tag("icons/document_preview.png", :title => 'View this guide', :alt => 'View guide', :border => 0),{ :controller => "srg", :action => 'index', :id => guide}, :popup => ['', 'height=800,width=980,toolbar=yes, scrollbars =yes,resizable=yes'],:class =>'right_space'
                %td{:class => sort_th_class_helper("date"), :width => "15%"}
                  = guide.updated_at.to_date
                %td.center{:width => "5%"}
                  - unless guide.published?
                    = image_tag("icons/Minus.png", :title => 'This guide is not published', :alt => 'publish this guide', :border => 0)
                  - else
                    = image_tag("icons/Plus.png", :title => 'This guide is published', :alt => 'unpublish this guide', :border => 0)
          .pagination
            - if @guides.total_pages > 1
              %ul
                %li= will_paginate @guides, :params => params.merge({:sort=> @sort}).except(:authenticity_token)
                %div= submit_tag 'Add Module', :class=> "submit"
            - else
              %p
                %b You currently have no Guides. Create a new guide to get started.
