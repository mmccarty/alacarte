= render 'module/edit_top'

- if flash[:error]
  #error_wrapper
    #list_error
      = flash[:error]

= error_messages_for 'mod'

= form_tag({ :action => 'update', :id => @mod, :type => @mod.class }, :multipart => true) do
  = render 'module/mod_title'
  = show_form @mod.class.to_s
  #submit_button
    = submit_tag 'Save', :class => 'btn btn-primary'
    = link_to 'Cancel', { :action => 'index', :id => @mod, :type => @mod.class, :list => 'mine', :sort => 'name' }, class: 'btn btn-cancel'
