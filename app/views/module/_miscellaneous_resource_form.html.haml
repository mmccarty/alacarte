%label{ :for => 'mod[content]' }
  Content
  %span.more_help{ :onMouseover => "fixedtooltip(CUSTOM_MSSG, this, event, '325');", :onMouseout => "delayhidetip()" }
    = image_tag 'icons/small_help.png', :alt => 'Tip', :border => 0
= text_area :mod, :content, :class => 'tinymce'
%br/

%p
  %b
    Add a <i>Read More</i> link?
    No
    = radio_button_tag 'more', 1, :checked => is_more?, :onclick => 'hide_more()'
    Yes
    = radio_button_tag 'more', 0, :checked => !is_more?, :onclick => 'show_more()'
    %span.more_help{ :onMouseover => "fixedtooltip(POP_UP_MSSG, this, event, '115');", :onMouseout => "delayhidetip()" }
      = image_tag 'icons/small_help.png', :alt => 'Tip', :border => 0

#more_info{ :style => is_more? ? 'display: none;' : 'display: block;' }
  %label{ :for => 'mod[more_info]' }
    Linked Content
    %span.more_help{ :onMouseover => "fixedtooltip(MORE_MSSG, this, event, '');", :onMouseout => "delayhidetip()" }
  = text_area :mod, :more_info, :class => 'tinymce'

= tinymce
