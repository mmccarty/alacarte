.actions
  = link_to image_tag("icons/document_preview.png", :title => 'Preview this guide', :alt => 'preview', :border => 0), subject_guide_path(@guide)
  = link_to 'Preview', subject_guide_path(@guide, :tab => session[:current_tab]), :target => '_blank', :title =>"Preview " + @guide.guide_name
  |
  - unless @guide.published?
    = link_to "Publish", publish_guide_path(@guide), :confirm => 'Are you sure you want to publish this guide?', :method => :post
  - else
    = link_to "Unpublish", publish_guide_path(@guide), :confirm => 'Are you sure you want to unpublish this guide?', :method => :post
