%table
  - for user in @guide_owners
    %tr{:class => cycle('list-line-odd', 'list-line-even')}
      %td{:width => "70%"}
        %span.list-title= h user.name
      %td
        - unless @guide_owners.size == 1
          = link_to image_tag("icons/user_remove.png", :title => 'Remove this user from editor list', :alt => 'remove user', :border => 0), {:action => 'remove_user_from_guide', :id => user.id}, :confirm => 'Are you sure you want to remove this user from the editor list?', :method => :post
      %td
        - unless @guide.created_by.to_s == user.name.to_s
          = image_tag("icons/comment_add.png", :title => 'Set as Owner', :alt => 'set owner', :border => 0)
          = set_owner_helper(@guide.id, user.id)
        - else
          = image_tag("icons/comment.png", :title => 'Owner', :alt => 'owner', :border => 0)
          Owner
