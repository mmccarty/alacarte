.row
  .span2= render 'side_bar'

  .span10
    %h1.page-header= @guide.guide_name

    %ul.nav.nav-tabs
      - @tabs.each do |tab|
        - if tab.id == @tab.id
          %li.active= link_to tab.tab_name, polymorphic_path([@guide, tab], action: :add_modules)
        - else
          %li= link_to tab.tab_name, [@guide, tab]
      %li
        = link_to polymorphic_path([@guide, :tab], action: :new), :title => 'Add new tab' do
          %i.icon-plus

    .tab-content
      .tab-pane.active
        .btn-toolbar
          .btn-group
            = link_to '', polymorphic_path([@guide, @tab], action: :toggle_columns), method: :post, class: 'btn icon-columns', title: 'Toggle columns'
            = link_to '', polymorphic_path([@guide, @tab], action: :delete), method: :post, class: 'btn btn-danger icon-trash', title: 'Delete this module', confirm: 'Are you sure you want to delete this tab?'
        = render "tabs/#{ @mods ? 'one' : 'two' }_column_tab"
