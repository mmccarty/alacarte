.row
  .span2= render 'side_bar'

  .span10
    %h1.page-header
      = @guide.guide_name

    %ul.nav.nav-tabs
      - @tabs.each do |tab|
        - if tab.id == @tab.id
          %li.active
            %a{ :href => '#tab#{ tab.id }' }
              = tab.tab_name
        - else
          %li
            %a{ :href => '#tab#{ tab.id }' }
              %span.tabs= link_to tab.tab_name, { :remote => true, :update => 'tab_content', :url => { :controller => 'tab', :action => 'show', :id => tab.id } }, { :title => 'Edit This Tab', :href => url_for({ :controller => 'tab', :action => 'show', :id => tab.id }) }
              %span.hand= image_tag 'icons/move.png', :title => 'Drag and Drop', :alt => 'Drag and Drop', :border => 0
      %li
        = link_to new_tab_path, :title => 'Add new tab' do
          %i.icon-plus

    .tab-content
      .tab-pane.active
        .btn-toolbar
          .btn-group
            = link_to '', { :controller => 'tab', :action => 'toggle_columns' }, title: 'Toggle columns', class: 'btn icon-columns'
            = link_to '', { :controller => 'tab', :action => 'delete', :id => @tab.id }, :confirm => 'This will delete the tab and all modules on this tab from the guide. Are you sure you want to delete this tab from the guide?', :method => :post, class: 'btn btn-danger icon-trash', title: 'Delete this module', confirm: 'Are you sure?'
        = render "tabs/#{ @mods ? 'one' : 'two' }_column_tab"
