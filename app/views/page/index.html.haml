- if flash[:notice]
  #list_error
    = flash[:notice]
#page-list
  = new_button 'Create New Course Page'
  #new{:style => "display:none"}
    = form_tag :action => 'create' do
      = error_messages_for 'page'
      #vertical_inputs.page_index
        %h4
          Create Page
          %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(PAGE_INDEX_TITLE_MSSG, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
          = content_tag :a, 'cancel', :onclick => "$('new').toggle();$('new_button').toggle();; return false;"
        = render  :partial => "page_title"
        %span
          %label &nbsp;
          = submit_tag 'Create Page'
        %br/
  - unless @pages.size <1
    #second_tabs
      %ul#second_tabs
        %li.guide_pag.pagination
          - if !@all and @pages.total_pages > 1
            = will_paginate @pages, :params => params.merge({:sort=> @sort}).except(:authenticity_token), :page_links => false
    .clearer
    #product-list
      #table
        = render  :partial => "pages_list"
  - else
    #notice You currently have no ICA pages. Create a new page to get started.
