%fieldset
  #main
    %h3 Create New Page
    = form_tag :action => 'new' do
      = error_messages_for 'page'
      / [form:page]
      #share
        %fieldset
          <h4 #{%(class="required") if flash[:error]}>Page Title
          .tip
            A course page title must be unique. Press Ctrl or Command to select or deselect multiple subjects.
            %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(PAGE_TITLE_MSSG, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
          #vertical_inputs
            %span
              %label{:for => "page_subject"} Subject
              <div #{%(class="fieldWithErrors") if flash[:course_subj_error]}>
              %select#subject.page{:multiple => "multiple", :name => "subjects[]", :size => "2"}
                = options_from_collection_for_select(@subj_list, 'id', 'subject_code', (flash[:course_subj] || @selected))
          %span
            %label{:for => "page_course_num"} Course #
            = text_field 'page', 'course_num',"size" => 5, :tabindex=>"2"
          %span
            %label{:for => "page_course_name"} Course Name
            = text_field 'page', 'course_name',"size" => 30 , :tabindex=>"3"
          %span
            %label{:for => "page_term"} Term
            = select('page','term',@terms,  {}, {:class => 'page', :tabindex=>"4"})
          %span
            %label{:for => "page_year"} Year
            = select('page','year',@years, {}, {:class => 'page', :tabindex=>"5"})
          %span
            %label{:for => "page_sect_num"} Section#
            = text_field 'page', 'sect_num',"size" => 5 , :tabindex=>"6"
          %span
            %label{:for => "page_campus"} Campus
            = select('page','campus',@campus, {}, {:class => 'page', :tabindex=>"7"})
%fieldset
  %h4 Page Metadata
  %label{:for => "page_page_description"}
    Description
    %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(PAGE_DESC, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
  = text_area_tag 'page', 'page_description',"class" => 'tinymce', :size => '40x2'
  %label{:for => "tags"}
    Tags
    %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(PAGE_TAGS, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
  = text_area_tag 'tags','', {"class" => 'tinymce', :size => '40x2'}
  = tinymce
= submit_tag 'Create Page', :class => "submit"
/ [eoform:page]
%p= link_to 'Cancel', :action => 'index'
