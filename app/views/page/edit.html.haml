%fieldset
  %h3.title
    = render :partial => 'title_actions'
  %h4 Edit Page
  - if flash[:error]
    #error_wrapper
      #list_error= flash[:error]
  = error_messages_for 'page'
  = new_button 'Add New Tab'
  #tab_new{:style => "display:none"}
    = form_tag :controller => 'tab', :action => 'page_create' do
      = error_messages_for 'tab'
      %label
        Tab Title  #{content_tag :a, 'cancel', :onclick => "$('tab_new').toggle();$('new_button').toggle();; return false;"}
      = text_field 'tab', 'tab_name',"size" => 12
      = submit_tag 'Create'
  #tab_content
    #guide_tabs
      %ul#drag
        - for tab in @tabs
          - unless tab.id == @tab.id
            %li{:id => "item_#{tab.id}"}
              %span.tabs
                = link_to h(tab.tab_name), {:update => 'tab_content', :url => {:controller =>'tab', :action => 'page_show', :id => tab.id}}, :href => url_for({:controller =>'page', :action => 'edit', :id => @page.id, :tab => tab.id}), :title => 'Edit This Tab', :remote => true
                %span.hand= image_tag("icons/move.png", :title => 'Drag and Drop', :alt => 'Drag and Drop', :border => 0)
          - else
            %li.editable{:id => "item_#{tab.id}"}
              %span.tabs
                = in_place_editor_field :tab, 'tab_name', {}, :rows => 1
                = link_to image_tag("icons/remove.png", :title => 'Delete tab', :alt => 'Delete tab', :border => 0), {:controller =>'tab', :action => 'page_delete', :id => tab }, :confirm => 'This will delete the tab and all modules on this tab from the page. Are you sure you want to delete this tab from the page?', :method => :post
                %span.hand
                  = image_tag("icons/move.png", :title => 'Drag and Drop', :alt => 'Drag and Drop', :border => 0)
    #mock_content.clear_left
      .tab_actions
        = link_to image_tag("icons/add.png", :title => 'Add Modules', :alt => 'add modules', :border => 0)+'Add Modules', {:controller => 'tab', :action => 'page_add_modules',  :id => @page.id,:sort => 'name'}
        | #{link_to 'Toggle Columns',:controller => 'tab',  :action => 'toggle_columns'}
      #mock_left.left_bar
        %ul.no_indent
          %li.list-item
            = link_to image_tag("icons/edit.png", :title => 'Edit this Module', :alt => 'Edit', :border => 0)+ ' Contact Module', {:controller => 'page', :action => 'edit_contact', :id => @page}
          %li.list-item
            = link_to image_tag("icons/edit.png", :title => 'Edit Related Subjects', :alt => 'Edit', :border => 0)+ ' Related Guides', {:controller => 'page', :action => 'edit_relateds', :id => @page}
      - unless @mods
        = render :partial => 'tab/two_column_tab'
      - else
        = render :partial => 'tab/one_column_tab'
  = render :partial => 'side_bar'
