%fieldset
  #main
    %h3.title
      = render :partial => 'title_actions'
    %h4 Share Page
    - if flash[:notice]
      #error_wrapper
        #notice= flash[:notice]
    #share
      %fieldset
        = form_tag({:action=> 'share_update',:id =>@page}) do
          = render 'shared/share_left'
          #share_right
            %fieldset
              %h5
                Sharing Options
                %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(GUIDE_SHARE_MSSG, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
              %strong
                = radio_button_tag('copy', 2, true)
                Share the Original
              .tip Sharing the original gives editing rights to this page.
              %strong
                = radio_button_tag('copy', 1, false)
                Share a Template
              .tip
                A template is a copy and does not give editing rights to this page.
            %fieldset
              %h5 Email Message
              = text_area_tag "body", @message, :rows => 10, :cols => 3, :class => "tinymce"
              = tinymce
            %p
              = submit_tag "Share Page",:class => "submit"
              = link_to 'Cancel', :action => 'index'
.clearer
%fieldset
  %h5 Page Editors
  .tip
    Removing someone revokes their editing rights to this page and the page's modules. The last owner can not be deleted. #{image_tag "spinner.gif", :id => "spinner_sort", :class => 'image', :alt => "Spinner", :style => 'display:none;'}
  #editor-list
    = render :partial => 'owners'
= render :partial => 'side_bar'
