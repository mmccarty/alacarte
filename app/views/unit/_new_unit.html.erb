<%= new_button 'Create New Unit' %>
<div id="new" style="display:none">
  <%= form_tag :controller => 'unit', :action => 'create' do%>
  <%= error_messages_for 'unit' %>
  <div id="vertical_inputs" class="index">
    <h5>New Unit </h5><span class = 'more_help' onMouseover="fixedtooltip(MOD_TITLE_MSSG, this, event, '');" onMouseout="delayhidetip();"><%= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)%></span></label>
  <%= content_tag :a, 'cancel', :onclick => "$('new').toggle();$('new_button').toggle();; return false;" %>
<span <%= %(class="required") if flash[:unit_title_error] %>>
  <label for="page_course_name">Unit Name<span class="required more_help">*</span></label>
  <%= text_field 'unit', 'title',"size" => 45 , :value => flash[:unit_title]   %>
</span>
<span><label>&nbsp;</label><%= submit_tag 'Create Unit' %></span>
<br />
</div>
<%end%>
</div>
