%table
  - for user in @owners
    %tr{:class => cycle('list-line-odd', 'list-line-even')}
      %td{:width => "70%"}
        %span.list-title= h user.name
      %td
        - unless user.id == @tutorial.created_by
          = link_to image_tag("icons/user_remove.png", :title => 'Remove this user from editor list', :alt => 'remove user', :border => 0), {:action => 'remove_user', :id => @tutorial, :uid => user.id}, :confirm => 'Are you sure you want to remove this user from the editor list?', :method => :post
      %td
        - unless user.id == @tutorial.created_by
          = image_tag("icons/comment_add.png", :title => 'Set as Owner', :alt => 'set owner', :border => 0)
          = set_owner_helper(@tutorial.id, user.id)
        - else
          = image_tag("icons/comment.png", :title => 'Owner', :alt => 'owner', :border => 0)
          Owner
