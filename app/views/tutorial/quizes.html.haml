%fieldset
  %h3.title= render :partial => 'title_actions'
  %h4 Quiz Manger
  - if flash[:notice]
    #error_wrapper
      #notice= flash[:notice]
  #share
    %p
      %strong Quiz Results:
      = link_to 'View Responses', {:controller => 'ort', :action => 'grades', :id => @tutorial}, :popup => ['', 'height=800,width=980,toolbar=yes, scrollbars =yes,resizable=yes']
      %br/
      %strong Grades Login/Password:
      = @tutorial.id
      \/ #{@tutorial.pass}
    = form_tag :action => 'quizes' do
      %p
        %strong Sort by Section Number:
        %select#section{:name => "section"}
          %option{:selected => "selected", :value => "00"} Select
          = options_for_select(@sections, @sect)
        = submit_tag 'Go'
        - if @sect
          %small= link_to 'Show All Sections', :action => 'quizes'
          %p
            = link_to 'Export Grades', :action => 'export', :id => @tutorial, :section => @sect
            | #{link_to 'Clear Grades', {:action => 'clear_grades', :id => @tutorial, :section => @sect},:confirm => 'Are you sure you want to delete the grades for this section?', :method => :post}
        - else
          %p
            = link_to 'Export All Grades', :action => 'export', :id => @tutorial
            | #{link_to 'Clear All Grades', {:action => 'clear_grades', :id => @tutorial},:confirm => 'Are you sure you want to delete all grades for this tutorial?', :method => :post}
    - if @students.size < 1
      %p Sorry there are no quiz results for this section.
    - else
      %ol
        - @students.each do |student|
          %li
            %label
              Name: #{student.name}
              %br/
              Onid: #{student.onid}
              %br/
              Total Score: #{student.final_score} out of #{@tutorial.possible_score}
              %br/
              Section: #{student.sect_num}
              %br/
  %p= link_to 'Cancel', :action => 'index'
= render :partial => 'side_bar'
