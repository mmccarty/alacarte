%h1 Create New Page

= form_for @page do |f|
  = error_messages_for 'page'

  %fieldset
    %legend Page Title
    .tip
      A course page title must be unique. Press Ctrl or Command to select or deselect multiple subjects.
      %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(PAGE_TITLE_MSSG, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)

      %label{:for => "page_subject"} Subject
      = select_tag :subjects, options_from_collection_for_select(@subj_list, :id, :subject_code, @subjects), multiple: true, size: 2

    %label{:for => "page_course_num"} Course #
    = f.text_field :course_num, "size" => 5, :tabindex=>"2"

    %label{:for => "page_course_name"} Course Name
    = f.text_field :course_name, "size" => 30 , :tabindex=>"3"

    %label{:for => "page_term"} Term
    = f.select :term, @terms

    %label{:for => "page_year"} Year
    = f.select :year, @years

    %label{:for => "page_sect_num"} Section#
    = f.text_field :sect_num, "size" => 5 , :tabindex=>"6"

    %label{:for => "page_campus"} Campus
    = f.select :campus, @campus

  %fieldset
    %legend Page Metadata

    %label{:for => "page_page_description"}
      Description
      %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(PAGE_DESC, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
    = f.text_area :page_description, "class" => 'tinymce', :size => '40x2'
    = tinymce
    %br/

    %label{:for => "tags"}
      Tags
      %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(PAGE_TAGS, this, event, '125');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
    = f.text_field :tag_list

  = submit_tag 'Create Page', class: 'btn btn-primary'
  = link_to 'Cancel', dashboard_path, class: 'btn btn-cancel'
