.row
  .span2= render 'side_bar'

  .span10
    %h1.page-header= @page.header_title

    %ul.nav.nav-tabs
      - @tabs.each do |tab|
        - if tab.id == @tab.id
          %li.active= link_to tab.tab_name, polymorphic_path([@page, tab], action: :add_modules)
        - else
          %li= link_to tab.tab_name, [@page, tab]
      %li
        = link_to polymorphic_path([@page, :tab], action: :new), :title => 'Add new tab' do
          %i.icon-plus

    .tab-content
      .tab-pane.active
        .btn-toolbar
          .btn-group
            = link_to '', { :controller => 'tab', :action => 'toggle_columns' }, title: 'Toggle columns', class: 'btn icon-columns'
            = link_to '', { :controller => 'tab', :action => 'delete', :id => @tab.id }, :confirm => 'This will delete the tab and all modules on this tab from the guide. Are you sure you want to delete this tab from the guide?', :method => :post, class: 'btn btn-danger icon-trash', title: 'Delete this module', confirm: 'Are you sure?'
        = render "tabs/#{ @mods ? 'one' : 'two' }_column_tab"
