= render :partial => 'ort/top'
#content
  / <div id="item-corner"></div>
  #content-column2
    .item
      .item2
        .item3
          %h2 Register
          %p
            New to
            = succeed "?" do
              %b= @tutorial.full_name
            %br/
            = link_to 'Create an Account', {:controller => 'student', :action => 'create_account', :id =>@tutorial}
  #content-column1
    %h3 Log in
    - if flash[:notice]
      #notice= flash[:notice]
    %p
    = form_tag :controller =>"student", :action=>'login', :id =>@tutorial.id do
      %label{:for => "onid"} Username
      = text_field "student","onid", :size =>25
      .tip e.g. smithj
      %label{:for => "email"} Email
      = text_field "student","email", :size =>25
      .tip e.g. smithj@mail.edu
      %br/
      = submit_tag 'Login', :class => 'submit'
    = link_to 'Forgot Username', {:controller => 'student', :action => 'forgot_password', :id =>@tutorial}
    / end content-column1
  #content-column1
    %h3 Why Log in?
    %p
      This tutorial requires you to log in so that you can that you can take the graded quizzes.
      Your scores will then be submitted to your instructor.  Please log in with your
      = succeed "." do
        %b username and email address
    / end content-column1
  / end content
  .bot
    %div
