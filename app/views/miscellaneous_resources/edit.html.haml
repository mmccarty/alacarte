%legend Edit Module

= report_errors @mod

= form_for @mod do |f|
  = render 'modules/mod_title'

  %p
    &nbsp;

  = f.text_area :content, class: 'tinymce'
  = tinymce

  %br
  .control-group
    .controls
      = f.submit 'Save', class: 'btn btn-primary'
      = link_to 'Cancel', modules_path, class: 'btn btn-cancel'
