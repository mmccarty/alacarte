- total = 0
%fieldset
  - results.each do |result|
    - question = mod.questions.find(result[0])
    %strong= question.question
    %ul
      %li
        - unless question.correct_answer.blank?
          %strong Correct Answer:
          = question.correct_answer
          %br/
        %strong Your Answer:
        = result[1]
        - unless question.points == 0
          %br/
          %strong
            = result[2]
            out of #{h question.points}
    - total = result[2] + total
  - unless @mod.possible_points == 0
    %h5
      Total Score:
      %span.required
        = total
        \/ #{@mod.possible_points}
  - unless @student
    = link_to 'retake quiz', :back, :id => @mod.id
