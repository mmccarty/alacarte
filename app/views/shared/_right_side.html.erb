<% unless @local.book_search.blank? and @local.site_search.blank? and @local.g_search.blank?%>
<div class="well white-well">
  <div id="search">
    <ul class="nav nav-tabs">
      <% unless @local.g_search.blank?%>
      <li class="active">
        <a href="#" rel="guides"><span>Guides</span></a>
      </li>
      <%end%>
      <% unless @local.book_search.blank?%>
      <li>
        <a href="#" rel="books"><span>Books</span></a>
      </li>
      <%end%>
      <% unless @local.site_search.blank?%>
      <li class="last">
        <a href="#" rel="library"><span>Library</span></a>
      </li>
      <%end%>
    </ul>
  </div>

  <% unless @local.g_search.blank?%>
  <div id="guides" class="tabcontent">
    <label class="text-center">Search Library Guides</label>
    <%= @local.g_search%>
  </div>
  <%end%>

  <% unless @local.book_search.blank?%>
  <div id="books" class="tabcontent">
    <label class="text-center"><%=@local.book_search_label%></label>
    <%=@local.book_search%>
  </div>
  <%end%>

  <% unless @local.site_search.blank?%>
  <div id="library" class="tabcontent">
    <label class="text-center"><%=@local.site_search_label%></label>
    <%=@local.site_search%>
  </div>
  <%end%>
</div>

<script type="text/javascript" src="http://www.google.com/coop/cse/brand?form=cse-search-box&amp;lang=en">
</script>
<script type="text/javascript">
  //<![CDATA[

	var mysearch=new ddtabcontent("search") //enter ID of Tab Container
	mysearch.setpersist(true) //toogle persistence of the tabs' state
	mysearch.setselectedClassTarget("linkparent") //"link" or "linkparent"
	mysearch.init()

//]]>
</script>
<%end%>

<%unless @local.right_box.blank?%>
<div class="well">
  <%= @local.right_box%>
</div>
<%end%>

<div id="about-guides" class="well tabs-left">
  <ul id="overview" class="nav nav-tabs">
    <li><a href="#" rel="all" class="active">About</a></li>
    <li><a href="#" rel="students">Students</a></li>
    <li><a href="#" rel="teachers">Instructors</a></li>
    <li><a href="#" rel="librarians">Librarians</a></li>
  </ul>

  <div id="all" class="tabcontent">
    <p>
      Library guides and tutorials suggest tips and search strategies for finding and using information in a course, discipline, topic or format.
    </p>
  </div>

  <div id="students" class="tabcontent">
    <p>
      Guides give you a place to start doing university level research
      in an academic discipline or course assignment.
    </p>
    <p>
      Return to them to find new resources, related guides or learn about disciplines new to you.
    </p>
  </div>

  <div id="teachers" class="tabcontent">
    <p>
      Librarians can quickly create guides to help your students find the resources you want them to use, including discipline specific article databases, core journals, scholarly reference works and key web sites important to your field or course.
      <% unless @local.lib_url.blank?%>
        <p>
          <a href="<%=@local.lib_url%>">Contact a Librarian</a>
          if you would like something tailored for your specific subject or assignment.
        </p>
      <%end%>
    </p>
  </div>

  <div id="librarians" class="tabcontent">
    <p>
      These Guides are created with Oregon State University Libraries' open source tool, <a href="http://alacarte.library.oregonstate.edu">Library &agrave; la Carte</a>, which helps you quickly and easily create subject and course guides.
    </p>
  </div>
</div>

<% if @tags %>
<div class="well">
  <%= render :partial => '/shared/tag_cloud'%>
</div>
<% end %>

<%= render :partial => "tab_container",
           :locals => { :tcontainer => "myov",
                        :tcontainer_id => "overview",
                        :tcontainer_target => "link" } %>

<%= render :partial => "tab_container",
           :locals => { :tcontainer => "mysearch",
                        :tcontainer_id => "search",
                        :tcontainer_target => "linkparent" } %>
