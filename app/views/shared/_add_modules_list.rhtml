

<div id ="mine">
<div id="product-list" >
 <table class="my_lists">
 	<thead>
 		<tr>
 	<th class='center'>Add?</th>
	<th  class= '<%= sort_th_class_helper "name" %> ' >  
        <%= sort_link_helper "Label", "name" %>
    </th>
	<th><%= image_tag "spinner.gif", :id => "spinner_sort", :class => 'image', :alt => "Spinner", :style => 'display:none;'%></th>
	
	<th   class= '<%= sort_th_class_helper "date" %>'>
        <%= sort_link_helper "Last Update", "date" %></th>
	<th   class= '<%= sort_th_class_helper "type" %>'>
        <%= sort_link_helper "Content Type", "type" %></th>
    </tr>
	</thead>
	
  <% for mod in @mods %>
     <tr class="<%= cycle('list-line-odd', 'list-line-even') %>" >
       <td class= 'center' width ="5%">
         <%= check_box_tag("mod_list[]",{mod.id , mod.class },false, {}) %>
       </td>
	   <td class= '<%= sort_th_class_helper "name" %>'  width ="40%"><%= truncate(h(mod.label),45)%>
	    </td>
	   <td  class='center' width ="10%"><%= link_to image_tag("/images/icons/document_preview.png", :title => 'View this Module', :alt => 'View Module', :border => 0),{ :controller => 'module', :action => 'view_mod', :id => mod, :type => mod.class}, :popup => ['', 'height=500,width=400,toolbar=yes, scrollbars =yes,resizable=yes'] %></td>
	   <td class= '<%= sort_th_class_helper "date" %> '  width ="10%"> <%= mod.updated_at.to_date %>	</td>
	   <td class= '<%= sort_th_class_helper "type" %> '  width ="15%"> <%= mod.content_type%>	</td>	
	   
    </tr>
 <% end %>
</table>
</div>
</div>
<p><b>
			<%if @which_mods.page_count > 1%>
				More Modules: <%=pagination_links_remote @which_mods %><%= image_tag "spinner.gif", :id => "spinner_links", :class => 'image', :alt => "Spinner", :style => 'display:none;'%>
		   <%end%>
		</b></p>