%h2= h @mod.module_title
.module
  = form_tag @mod.search, :target => '_blank' do
    = text_field_tag('query[string]',value="Enter keywords",{ :size=> "25",:onclick => "this.value='';"})
    = hidden_field_tag('sets', value= @mod.get_targets)
    = submit_tag 'Go'
    = succeed "**Search" do
      %br/
    results open in a new window**
  - unless @mod.information.blank?
    %br/
    = @mod.information
