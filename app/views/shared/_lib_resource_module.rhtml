   <h2><%=h @mod.module_title%></h2>
   <div class="module">
	    <ul class="undeco">
			    <%unless @mod.librarian_name==""%><li><strong> <%=h @mod.librarian_name%> </strong></li><%end%>
				<%unless @mod.office_location=="" and  @mod.office_hours=="" %><li>Office Hours: <br /><%=h @mod.office_location%> <%=h @mod.office_hours%></li><%end%>
				<%unless @mod.chat_info=="" and @mod.email=="" %><li>Contact Info: <br />
				<%unless @mod.chat_info==""%><%=@mod.chat_info%><br /><%end%><%=mail_to @mod.email, truncate(@mod.email,30), :encode => "javascript"%></li><%end%>
				<%unless @mod.chat_widget==""%><li><br /><%= @mod.chat_widget%></li><%end%>
			</ul>
   </div>