%footer.footer
  .container
    %p
      - if !@local.footer.blank?
        = @local.footer.html_safe

    %p
      - if @guide
        = link_to "Screenreader, Printer & Mobile Version" , {:action => 'print', :id => @guide} , :id => 'alt-version'
      - elsif @page
        = link_to "Screenreader, Printer & Mobile Version" , {:action => 'print', :id => @page} , :id => 'alt-version'
      - elsif @tutorial
        = link_to "Screenreader, Printer & Mobile Version" , {:controller => 'ort', :action => 'print', :id => @tutorial} , :id => 'alt-version'
      - else
        = link_to "Screenreader, Printer & Mobile Version" , {:action => 'print_portal', :from => @from} , :id => 'alt-version'
