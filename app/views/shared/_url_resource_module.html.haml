%h2= h @mod.module_title
.module
  - unless @mod.information.blank?
    = @mod.information
  %ul.undeco
    - @mod.links.each do |link|
      %li
        - if link.target == true
          %a.external{:href => h link.url, :rel => "external", :title => "Link opens in a new window."}
        - else
          %a{:href => h link.url}
        = link.label.blank? ? h(link.url) : h(link.label)
        - unless link.description.blank?
          %br/
          = h(link.description)
