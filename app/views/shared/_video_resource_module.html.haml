= javascript_include_tag "jquery.min.js"
= javascript_include_tag "jquery.prettyPhoto.js"
%h2= h @mod.module_title
.module
  - unless @mod.information.blank?
    = @mod.information
  - @mod.videos.each do |video|
  - @vid = video.retrieve_video+"&amp;fs=1&amp;rel=0"
  - unless @vid.blank?
  %p
    = render :partial => "video/player.html.erb"
    %br/
    %a{:href => video.url, :rel => "prettyPhoto", :title => "Click to view larger"}
      %img{:alt => "Play", :src => "icons/play.png", :style => "vertical-align:middle;"}/
    %a{:href => video.url, :rel => "prettyPhoto", :title => "Click to view larger"} View Larger
  - unless video.transcript.url.blank?
    %p
      Video Transcript:
      %a{:href => video.transcript.url(), :title => "Click to download"}= h(video.transcript_file_name)
  - else
    %p No Video Found.
  - unless video.description.blank?
    %br/
    = h(video.description)
%script{:charset => "utf-8", :type => "text/javascript"}
  jQuery.noConflict();
  jQuery(document).ready(function($){
  $("a[rel^='prettyPhoto']").prettyPhoto({
  default_width: 800,
  default_height: 600,
  
  });
  });
