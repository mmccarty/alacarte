%fieldset
  %h3
    Course Pages for #{h @user.name}
  %p
    %b= link_to 'Back to Users', :action => 'users'
  - if flash[:notice]
    #error_wrapper
      #notice= flash[:notice]
  %h4
    Total Pages: #{@count}
  #product-list
    %table
      %tr{:class => cycle('list-line-odd', 'list-line-even'), :valign => "top"}
        %th Title
        %th Last Update
        %th Published
        %th Actions
      - for page in @pages
        %tr{:class => cycle('list-line-odd', 'list-line-even'), :valign => "top"}
          %td= link_to h(page.search_title), {:controller => "ica", :action => 'index', :id => page}
          %td= h page.updated_at
          %td= h page.published
          %td
            = link_to 'Assign', { :action => 'assign_page', :id => page}
            | #{link_to 'Archive', { :action => 'archive_page', :id => page}, :confirm => 'Are you sure you want to archive this page?', :method => :post}
            | #{link_to 'Delete', {:action => 'destroy_page', :id => page}, :confirm => 'Are you sure you want to delete this page?', :method => :post}
  %p
    %b= link_to 'Back to Users', :action => 'users'
