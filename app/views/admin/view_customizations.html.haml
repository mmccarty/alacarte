.row
  .container
    %h1.page-header= _('Customizations')

  .span6
    %h2 View
    %ul.unstyled
      %li= link_to _('Course Guide Template'), :controller => 'ica', :action => 'published_pages'
      %li= link_to _('Subject Guide Template'), :controller => 'srg', :action => 'published_guides'
      %li= link_to _('Tutorial Template'), :controller => 'ort', :action => 'published_tutorials'

    %h2 Edit
    %ul.unstyled
      %li= link_to _('Template'), :controller => 'admin', :action => 'customize_layout'
      %li= link_to _('Content Types'), :controller => 'admin', :action => 'customize_content_types'
      %li= link_to _('Admin Email Addresses'), :controller => 'admin', :action => 'customize_admin_email'

  .span5.well.well-small
    %dl.dl-horizontal
      - Local.content_columns.each do |column|
        - unless @local.send(column.name).blank? || column.human_name == 'Types'
          %dt #{ column.human_name }
          %dd #{ @local.send(column.name) }
