%fieldset
  %h3
    Edit #{h @subject.subject_name}
  - if flash[:error]
    #error_wrapper
      #list_error= flash[:error]
  = error_messages_for 'subject'
  = form_tag :action => 'edit_subject' ,:id => @subject do
    #vertical_inputs
      %span
        %label{:for => "subject_code"}
          %span.required> *
          Subject Code
        = text_field 'subject', 'subject_code', :size => 10
      %span
        %label{:for => "subject_name"}
          %span.required> *
          Subject Name
        = text_field 'subject','subject_name'
    %br.clearer/
    #submit_button
      = submit_tag 'Save Subject', :class=>"submit"
  %p
    = link_to 'Cancel', :action => 'subjects'
