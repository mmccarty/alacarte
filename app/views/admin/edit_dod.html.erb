<fieldset>
  <h3>Edit <%=h @dod.title%></h3>
  <% if flash[:error] -%>
  <div id ="error_wrapper">    <div id="list_error" ><%= flash[:error] %></div></div>
  <% end -%>
  <%= error_messages_for 'dod' %>
  <%= form_tag :action => 'edit_dod' ,:id => @dod do %>
  <label for="title"><span class="required">*</span>Database Title</label>
  <%= text_field 'dod', 'title'%>

  <label for="url"><span class="required">*</span>Database URL</label>
  <%=text_field 'dod','url'%>

  <label for="startdate">Coverage Start Date</label>
  <%= text_field 'dod', 'startdate'%>

  <label for="enddate">Coverage End Date</label>
  <%=text_field 'dod','enddate'%>

  <label for="provider"><span class="required">*</span>Provider Name</label>
  <%= text_field 'dod', 'provider'%>

  <label for="providerurl">Provider URL</label>
  <%=text_field 'dod','providerurl'%>

  <label for="proxy"><span class="required">*</span>Requires Proxy (0 = false, 1 = true)</label>
  <%= text_field 'dod', 'proxy'%>

  <label for="descr"><span class="required">*</span>Database Description</label>
  <%=text_area 'dod','descr'%>

  <div id="submit_button">
    <%= submit_tag 'Save Database', :class=>"submit"%>
  </div>
  <%end %>
  <p>
    <%= link_to 'Cancel', :action => 'dods' %>
  </p>
</fieldset>
