%fieldset
  %h3
    Edit #{h @dod.title}
  - if flash[:error]
    #error_wrapper
      #list_error= flash[:error]
  = error_messages_for 'dod'
  = form_tag :action => 'edit_dod' ,:id => @dod do
    %label{:for => "title"}
      %span.required> *
      Database Title
    = text_field 'dod', 'title'
    %label{:for => "url"}
      %span.required> *
      Database URL
    = text_field 'dod','url'
    %label{:for => "startdate"} Coverage Start Date
    = text_field 'dod', 'startdate'
    %label{:for => "enddate"} Coverage End Date
    = text_field 'dod','enddate'
    %label{:for => "provider"}
      %span.required> *
      Provider Name
    = text_field 'dod', 'provider'
    %label{:for => "providerurl"} Provider URL
    = text_field 'dod','providerurl'
    %label{:for => "proxy"}
      %span.required> *
      Requires Proxy (0 = false, 1 = true)
    = text_field 'dod', 'proxy'
    %label{:for => "descr"}
      %span.required> *
      Database Description
    = text_area 'dod','descr'
    #submit_button
      = submit_tag 'Save Database', :class=>"submit"
  %p
    = link_to 'Cancel', :action => 'dods'
