%fieldset
  %h3 Listing Database of Databases
  - if flash[:notice]
    #error_wrapper
      #notice= flash[:notice]
  = new_button 'Create New Database'
  #new{:style => "display:none"}
    = form_tag :action => 'new_dods' do
      #vertical_inputs.index
        %label{:for => "num"} Number of Databases to Add
        = select('dod','num', [[1,1]],:selected => 1, :size => 5)
        = submit_tag 'Add New Database'
        %br/
        %br/
        = content_tag :a, 'cancel', :onclick => "$('new').toggle();$('new_button').toggle();; return false;"
        %br/
  #product-list
    %table
      %tr{:class => cycle('list-line-odd', 'list-line-even'), :valign => "top"}
        %th Title
        %th Actions
      - for sub in @dods
        %tr{:class => cycle('list-line-odd', 'list-line-even'), :valign => "top"}
          %td= h sub.title
          %td
            = link_to 'Edit', :action => 'edit_dod', :id => sub
            |
            \#{link_to 'Delete', { :action => 'destroy_dod', :id => sub }, :confirm => 'Are you sure you want to delete this Dod?', :method => :post}
  = will_paginate @dods
