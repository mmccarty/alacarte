%fieldset
  %h3
    Assign #{h@page.header_title}
  - if flash[:notice]
    #error_wrapper
      #notice= flash[:notice]
  #share
    #share_left
      %fieldset
        = form_tag({:action=> 'page_update',:id =>@page}) do
          %h5 Add Editor
          .tip Sharing a page with others gives them editing rights to the page and the module's on the page.
          %select#users.share{:multiple => "multiple", :name => "users[]"}
            = options_from_collection_for_select(@user_list, 'id', 'name')
          %br/
          .tip (press Ctrl+Alt to select mutiple users)
          = submit_tag "Share Page",:class => "submit"
      %p
        %b= link_to 'Back to Users', :action => 'users'
    #share_right
      %fieldset
        %h4 Page Editors
        #editor-list
          %table
            - for user in @page_owners
              %tr{:class => cycle('list-line-odd', 'list-line-even')}
                %td{:width => "70%"}
                  %span.list-title= h user.name
                %td
                  - unless @page_owners.size == 1
                    = link_to image_tag("icons/user_remove.png", :title => 'Remove this user from editor list', :alt => 'remove user', :border => 0), { :action => 'remove_user_from_page',:id => @page, :uid => user.id}, :confirm => 'Are you sure you want to remove this user from the editor list?', :method => :post
