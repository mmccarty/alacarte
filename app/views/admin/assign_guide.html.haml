%fieldset
  %h3
    Assign #{h@guide.guide_name}
  - if flash[:notice]
    #error_wrapper
      #notice= flash[:notice]
  #share
    #share_left
      %fieldset
        = form_tag({:action=> 'guide_update',:id =>@guide}) do
          %h5 Add Editor
          .tip By sharing this guide you are giving editing rights to the people you select.
          %select#users.share{:multiple => "multiple", :name => "users[]"}
            = options_from_collection_for_select(@user_list, 'id', 'name')
          %br/
          .tip (press Ctrl+Alt to select mutiple users)
          = submit_tag "Share Guide",:class => "submit"
      %p
        %b= link_to 'Back to Users', :action => 'users'
    #share_right
      %fieldset
        %h4 Guide Editors
        .tip Removing someone revokes their editing rights.
        #editor-list
          %table
            - for user in @guide_owners
              %tr{:class => cycle('list-line-odd', 'list-line-even')}
                %td{:width => "70%"}
                  %span.list-title= h user.name
                %td
                  - unless @guide_owners.size == 1
                    = link_to image_tag("icons/user_remove.png", :title => 'Remove this user from editor list', :alt => 'remove user', :border => 0), {:action => 'remove_user_from_guide', :id => @guide, :uid => user.id}, :confirm => 'Are you sure you want to remove this user from the editor list?', :method => :post
