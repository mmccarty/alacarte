%h1 Listing Users
= flash_notice

= link_to new_user_path, class: 'btn btn-primary' do
  %i.icon-plus
  Add New User

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Email
      %th Role
      %th Actions
      %th Guides
  %tbody
    - @users.each do |user|
      - unless user.role == 'pending'
        %tr
          %td= user.name
          %td= user.email
          %td= user.role
          %td
            = link_to '', edit_user_path(user), class: 'icon-edit'
            |
            = link_to '', user_path(user), class: 'icon-trash', method: :delete, confirm: 'Are you sure you want to delete this user?'
          %td
            = link_to 'Pages', :controller => :admin, :action => 'pages', :id => user
            |
            = link_to 'Guides', :controller => :admin, :action => 'guides', :id => user
            |
            = link_to 'Tutorials', :controller => :admin, :action => 'tutorials', :id => user

= will_paginate @users
