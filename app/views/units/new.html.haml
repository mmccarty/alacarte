.row
  .span= render 'tutorials/side_bar'

  .span10
    %h1.page-header
      Add Units
    = form_for [@tutorial, @unit] do |f|
      = error_messages_for 'unit'
      .control-group
        %label.control-label{ :for => 'page_course_name', :class => flash[:unit_title_error] && 'required' || 'not-required' }
          Unit Name
          %span.required *
        .controls
          = f.text_field :title, :class => 'input-xlarge',  :value => flash[:unit_title]
          %i.icon-question-sign{ :data => { :content => 'This is the module\'s title that will appear to the public. Shorter titles should be used in two column layouts.', :html => 'true', :trigger => 'hover' } }
      .control-group
        .controls
          = f.submit 'Create Unit', class: 'btn btn-primary'
          = link_to 'Cancel', :back, class: 'btn'

:javascript
  $('.icon-question-sign').popover();
