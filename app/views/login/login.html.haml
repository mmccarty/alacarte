%fieldset
  =form_tag do
    %h3.form Please Log In
    %label{:for => 'email'} Email
    =text_field_tag :email, params[:email], :size => 54
    %label{:for => 'password'} Password
    =password_field_tag :password, params[:password], :size => 54
    %br/
    %br/
    =submit_tag 'Login', :class => 'submit'
    &nbsp;
    =link_to 'Forgot My Password', :action => 'forgot_password'
  %br/
