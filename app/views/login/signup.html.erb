<fieldset>
  <h3>Request New Account</h3>
  <% if flash[:notice] -%>
  <div id="notice" ><%= flash[:notice] %></div>
  <% end -%>
  <% form_tag :action => 'request_account' do %>
  <%= render :partial => 'form' %>
  <%= recaptcha_tags %>
  <br /><br />
  <%= submit_tag 'Request New Account' ,:class =>"submit" %>
  <br /><br />
  <% end %>
  <p>
    <b><%= link_to 'Cancel', :action => 'login' %></b>
  </p>
</fieldset>
