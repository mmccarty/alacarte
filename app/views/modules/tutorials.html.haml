%fieldset
  %h3.title
    = render :partial => 'title_actions'
  %h4
    Tutorials
  #new_button.new
    %a{:href => "/module/add_to_tutorial/#{@mod.id}?type=#{@mod.class}&sort=name"}
      %span
        %img{:alt => "Add Tab", :src => "icons/add.png"}/
        Add to Tutorials
  #product-list
    - if !@tutorials.blank?
      %table
        %thead
      %th{:colspan => "2"}
        Tutorials Containing #{@mod.label}
      - @tutorials.each do |tutorial|
        %tr{:class => cycle('list-line-odd', 'list-line-even')}
          %td
            %b= h tutorial.full_name
          %td
            = link_to image_tag("icons/edit.png", :title => 'Edit this Tutorial', :alt => 'Edit', :border => 0), {:controller =>'tutorial', :action => 'update',  :id => tutorial}, :class=>'space'
            |	#{link_to image_tag("icons/document_preview.png", :title => 'Preview this Tutorial', :alt => 'View', :border => 0), { :controller => "ort", :action => 'index', :id => tutorial}, :target => '_blank', :class=>'space'}
    - else
      %p This Module is not used on any Tutorials
