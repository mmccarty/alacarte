%fieldset
  %h3.title= render 'title_actions'
  %h4
    = link_to "Add To/Used On", manage_module_path(@mod, :type => @mod.class)
    >> Add to Subject Guides
  - if flash[:error]
    #error_wrapper
      #list_error= flash[:error]
  %p Check the box next to the guide's tab you want to add the module to.
  - unless @guides.size <1
    = form_tag add_to_guide_module_path(@mod, :type => @mod.class) do
      #product-list
        #table
          %table
            %thead
              %tr
                %th Title
                %th
                %th Last Update
                %th Published?
            - for guide in @guides
              %tr
                %td
                  = truncate(guide.guide_name, :length => 65)
                  .check_box
                    - for tab in guide.tabs
                      = check_box_tag(tab.tab_name, tab.id,session[:tabs].include?(tab.id.to_s) , :onclick => "$.post('#{ add_guide_module_path(@mod, type: @mod.class) }', { tid: #{ tab.id });")
                      = tab.tab_name
                      %br/
                %td= link_to image_tag("icons/document_preview.png", :title => 'View this guide', :alt => 'View guide', :border => 0),{ :controller => "srg", :action => 'index', :id => guide}, :popup => ['', 'height=800,width=980,toolbar=yes, scrollbars =yes,resizable=yes'],:class =>'right_space'
                %td= guide.updated_at.to_date
                %td
                  - if guide.published?
                    = image_tag("icons/Plus.png", :title => 'This guide is published', :alt => 'unpublish this guide', :border => 0)
                  - else
                    = image_tag("icons/Minus.png", :title => 'This guide is not published', :alt => 'publish this guide', :border => 0)
          .pagination
            = will_paginate @guides
