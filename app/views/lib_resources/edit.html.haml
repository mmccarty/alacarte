%h1 Edit Module

= form_for @mod do |f|
  = error_messages_for :mod

  %label{ for: 'mod_label' }
    Private Label
    %span.required *
  = f.text_field :label, size: 55

  %label{ for: 'mod_title' }
    Module Title
    %span.required *
  = f.text_field :module_title, size: 55

  %label{ for: 'mod_tag_list' } Tags
  = f.text_field :tag_list, size: 55
  .tip example: WR101, Databases, Writing

  %label{:for => "librarian_name"}
    Librarian Name
    %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(LIB_NAME, this, event, '');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
  = f.text_field 'librarian_name',"size" => 54

  %label{:for => "librarian_photo"}
    Photo
    %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(LIB_IMAGE, this, event, '');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
  = f.text_area 'image_info',:class => "tinymce"

  %label{:for => "office_location"}
    Office Location
    %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(LIB_LOCATE, this, event, '');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
  = f.text_field 'office_location' ,"size" => 54

  %label{:for => "office_hours"}
    Office Hours
    %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(LIB_HOURS, this, event, '');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
  = f.text_field 'office_hours' ,"size" => 54

  %label{:for => "chat_info"}
    Chat Info or Phone #
    %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(LIB_CHAT, this, event, '');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
  = f.text_field 'chat_info',"size" => 54

  %label{:for => "email"}
    Email Address
    %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(LIB_EMAIL, this, event, '');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
  = f.text_field 'email',"size" => 54

  %label{:for => "chat_widget"}
    Chat Widget Snippet
    %span.more_help{:onmouseout => "delayhidetip();", :onmouseover => "fixedtooltip(LIB_WIDGET, this, event, '');"}= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)
  = f.text_area 'chat_widget', "class" => 'tinymce', :size => '40x5'
  = tinymce
  %br/

  = f.submit class: 'btn btn-primary'
  = link_to 'Cancel', modules_path, class: 'btn btn-cancel'
