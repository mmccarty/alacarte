<fieldset>
  <div id="main">
    <h3 class = 'title'><%=render :partial => 'title_actions'%></h3>
    <h4>Share Guide</h4>
    <% if flash[:notice] -%>
    <div id ="error_wrapper">    <div id="notice" ><%= flash[:notice] %></div></div>
    <% end -%>
    <div id="share">
      <fieldset>
 	<%= form_tag({:action=> 'share_update',:id =>@guide}) do %>
  <%= render 'shared/share_left' %>
	<div id="share_right">
	  <fieldset>
	    <h5>Sharing Options <span class = 'more_help'  onMouseover="fixedtooltip(GUIDE_SHARE_MSSG, this, event, '125');" onMouseout="delayhidetip();"><%= image_tag("icons/small_help.png", :alt => 'Tip', :border => 0)%></span></h5>
	    <strong> <%= radio_button_tag('copy', 2, true)%>   Share the Original</strong>
	    <div class = 'tip'> Sharing the original gives editing rights to this guide. </div>
	    <strong> <%= radio_button_tag('copy', 1, false)%>  Share a Template</strong>
	    <div class = 'tip'> A template is a copy and does not give editing rights to this guide.</div>
	  </fieldset>
	  <fieldset>
	    <h5>Email Message</h5>
	    <%= text_area_tag "body", @message, :rows => 10, :cols => 3, :class => "tinymce"%>
	  </fieldset>
	  <p> <%= submit_tag "Share Guide",:class => "submit"%> <%= link_to 'Cancel', :action => 'index' %></p>
	</div>
        <%end%>
      </fieldset>
      <div class ='clearer'></div>
      <fieldset>
	<h5>Guide Editors</h5>
	<div class = 'tip'>Removing someone revokes their editing rights to this guide and the guide's modules. The last owner can not be deleted. <%= image_tag "spinner.gif", :id => "spinner_sort", :class => 'image', :alt => "Spinner", :style => 'display:none;'%> </div>

	<div id="editor-list" >
	  <%=render :partial => 'owners'%>
	</div>

      </fieldset>

    </div>
  </div>
</fieldset>
<%=render :partial => 'side_bar'%>
